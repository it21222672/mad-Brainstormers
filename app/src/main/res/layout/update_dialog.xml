<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/color"
    android:orientation="vertical"
    android:padding="10dp">

    <EditText
        android:id="@+id/etinvestname"
        android:layout_width="391dp"
        android:layout_height="61dp"
        android:layout_marginTop="20dp"
        android:hint="Investor Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etinvestnic"
        android:layout_width="393dp"
        android:layout_height="68dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Investor Nic" />

    <EditText
        android:id="@+id/etinvestcountry"
        android:layout_width="385dp"
        android:layout_height="68dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Investor Country"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/bttonupdatdata"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/roundbttn"
        android:backgroundTint="@color/lighblue"
        android:text="Update Data" />


</LinearLayout>