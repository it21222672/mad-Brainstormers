<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:backgroundTint="#FFFFFF"
    android:orientation="vertical"
    tools:context=".activities.Contactus">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:fontFamily="@font/coiny"
        android:text="       Contact Us"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="334dp"
        android:layout_height="115dp"
        app:srcCompat="@drawable/gmail" />

    <TextView
        android:id="@+id/textViewa"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="@color/black"
        android:backgroundTint="@color/lighblue"
        android:text="  To:"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editTextc"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Invest@gmail.com"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textViewd"
        android:layout_width="426dp"
        android:layout_height="52dp"
        android:background="@android:color/black"
        android:backgroundTint="@color/lighblue"
        android:text="  Subject:"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editTexta"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:ems="10"
        android:hint="Enter your subject"
        android:inputType="textPersonName"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textViewe"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/black"
        android:backgroundTint="@color/lighblue"
        android:text="  Message:"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editTextb"
        android:layout_width="421dp"
        android:layout_height="107dp"
        android:ems="10"
        android:hint="Enter your message"
        android:inputType="textPersonName"
        android:textSize="24sp" />

    <Button
        android:id="@+id/bttoncontus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/lighblue"
        android:text="send"
        android:textSize="24sp" />

</LinearLayout>